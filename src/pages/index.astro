---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { PICTURES } from '../consts';
---

<Layout>
  <Header />
  <main class='m-4'>
    <div class='flex flex-wrap gap-5' id='gallery'>
      {
        PICTURES.map(({ src, width, height }) => (
          <div class='flex-none bg-slate-400 p-1'>
            <a href={src} data-pswp-width={width} data-pswp-height={height}>
              <img
                class='w-60 h-60 object-cover hover:scale-110 transition ease-in-out delay-100'
                src={src}
              />
            </a>
          </div>
        ))
      }
    </div>
  </main>
</Layout>
<script>
  // @ts-ignore
  import PhotoSwipeLightbox from 'photoswipe/lightbox';
  import 'photoswipe/style.css';
  const lightbox = new PhotoSwipeLightbox({
    gallery: '#gallery',
    children: 'a',
    pswpModule: () => import('photoswipe'),
  });
  lightbox.init();

  let test = 'Hello';
</script>
