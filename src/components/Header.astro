---
import { MENU } from '../consts';

export interface Props {
  path?: string;
}

const { path } = Astro.props;
---

<div class='flex flex-col md:flex-row justify-between md:w-4/5'>
  <h1 class='text-5xl md:text-8xl'>
    alice_d.ied<p class='text-2xl md:text-4xl'>{path}</p>
  </h1>

  <ul
    class='flex flex-col self-end md:self-auto md:flex-row md:gap-4 m-4 text-2xl'
  >
    {
      MENU.map(({ name, href }) => (
        <li class='self-start p-1 hover:bg-myYellow hover:text-black transition ease-in-out delay-100'>
          <a href={href}>{name}</a>
        </li>
      ))
    }
  </ul>
</div>
