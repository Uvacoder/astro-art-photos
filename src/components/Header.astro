---
import { MENU } from '../consts';

export interface Props {
  path?: string;
}

const { path } = Astro.props;
---

<header
  class='flex flex-col md:flex-row justify-between md:w-4/5 relative h-32'
>
  <h1 class='text-2xl sm:text-4xl lg:text-8xl pt-1'>
    alice_d.ied<p class='text-base sm:text-2xl md:text-4xl'>{path}</p>
  </h1>

  <ul
    class='flex flex-col self-end md:self-auto md:flex-row md:gap-4 m-0 md:mt-4 text-2xl absolute right-0'
  >
    {
      MENU.map(({ name, href }) => (
        <li class='self-start p-1 hover:bg-myYellow hover:text-black transition ease-in-out delay-100 '>
          <a href={href}>{name}</a>
        </li>
      ))
    }
  </ul>
</header>
