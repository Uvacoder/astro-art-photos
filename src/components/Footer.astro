---
import { MENU, SOCIAL } from '../consts';
import { Icon } from 'astro-icon';
---

<footer class="mt-6 mb-4 md:w-2/3">
  <div class="mx-auto h-2 bg-myYellow md:mx-0"></div>
  <div class="flex flex-col justify-between md:flex-row">
    <ul
      class="m-0 mt-4 flex justify-around px-3 text-2xl md:justify-start md:gap-8 md:pl-0"
    >
      {
        MENU.map(({ name, href }) => (
          <li class="self-start py-1 text-myYellow ">
            <a href={href}>{name}</a>
          </li>
        ))
      }
    </ul>
    <div class="mt-4 flex gap-8 self-center">
      {
        SOCIAL.map(({ icon, href }) => (
          <a class="w-10 md:w-8" href={href} target="_blank">
            <Icon name={icon} />
          </a>
        ))
      }
    </div>
  </div>
</footer>
